<style>

body{
  background-color:black;
}
.bgnoir{
  background-color:black;
}

.hover-effect{
    opacity: 1;
}
.hover-effect{
    width:"100%";
    height:"100%"
    transition: 1s;
}



    .hover-effect:hover {
      width:"120%";
    height:"120%"
    }

    img{border-radius:6px;}

button{
  outline:none;
  text-decoration:none;
  color:black;
}

.card-text-title{
  text-align: center;
}
</style>

<p style="color: green"><%= notice %></p>


<div class="fondu" id="articles">



  <div class="album py-5 bgnoir">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @articles.each do |article| %>
        <div class="col hover-effect">
          <div class="card shadow-sm">
           <img width="100%" height="100%" src=" <%= article.image %> "  >

            <div class="card-body">
              <p class="card-text-title"> <%= article.title %> </p>
              <p class="card-text"> <%= article.content %> </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">      <%= link_to "Show this article", article %>  </button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">    <a href="<%= article.image %>" download style>télécharger</a></button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>




  </div>

<%= link_to "New article", new_article_path %>
